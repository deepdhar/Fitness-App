    <androidx.cardview.widget.CardView
        android:id="@+id/setGoal_cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#23273A"
        android:elevation="10dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/goalNameEt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg3"
                android:hint="Set goal name"
                android:inputType="text"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#C5C5C5"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/goalDateEt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg3"
                android:hint="Set date"
                android:inputType="date"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#C5C5C5"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/goalStepsEt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg3"
                android:hint="Enter Steps"
                android:inputType="number"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#C5C5C5"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/setGoal_updateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_button_bg"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="10dp"
                    android:text="Update"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/setGoal_deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ok_button_bg"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="4dp"
                    android:text="Delete"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/setButtonTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Set Goal"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

